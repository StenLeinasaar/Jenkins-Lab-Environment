{
    "version": 3,
    "name": "FastBuy API Gateway",
    "port": 5000,
    "cache_ttl": "300s",
    "endpoints": [
        {
            "endpoint": "/deals",
            "method": "GET",
            "backend": [
                {
                    "url_pattern": "/deals",
                    "host": [
                        "http://backend:3000"
                    ],
                    "extra_config": {
                        "qos/sd": {
                            "ttl": "30s"
                        },
                        "security/cors": {
                            "allow_origins": [
                                "*"
                            ],
                            "allow_methods": [
                                "GET"
                            ]
                        }
                    }
                }
            ]
        }
    ]
}